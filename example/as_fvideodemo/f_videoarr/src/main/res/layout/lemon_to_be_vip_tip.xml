<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lemon_black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lemon_buy_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lemon_icon8"
            android:text="@string/lemon_pay_for_custom_tip"
            android:textColor="@color/lemon_white"
            android:textSize="@dimen/lemon_buy_tip_size" />


        <Button
            android:id="@+id/lemon_to_be_vip_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/lemon_buy_margin_top"
            android:background="@drawable/lemon_orange_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/lemon_buy_button_padding_horizen"
            android:paddingRight="@dimen/lemon_buy_button_padding_horizen"
            android:text="@string/lemon_pay_for_customize"
            android:textColor="@color/lemon_white"
            android:textSize="@dimen/lemon_buy_button_size"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
