<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lemon_black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lemon_buy_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lemon_icon8"
            android:text="@string/lemon_video_load_error_tip"
            android:textColor="@color/lemon_white"
            android:textSize="@dimen/lemon_buy_tip_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/lemon_buy_margin_top"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/lemon_change_url_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/lemon_orange_btn_bg"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/lemon_change_url"
                android:textColor="@color/lemon_white"
                android:textSize="@dimen/lemon_buy_button_size"/>


            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@color/lemon_buy_line_bg" />


            <Button
                android:id="@+id/lemon_feedback_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/lemon_orange_btn_bg"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/lemon_feedback"
                android:textColor="@color/lemon_white"
                android:textSize="@dimen/lemon_buy_button_size" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
