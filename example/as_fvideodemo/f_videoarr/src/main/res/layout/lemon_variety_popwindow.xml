<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/lemon_horizen_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lemon_white">

        <TextView
            android:id="@+id/lemon_episode_tv"
            style="@style/lemon_sub_title"
            android:text="@string/lemon_episode_choose" />

        <ImageView
            android:id="@+id/lemon_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/lemon_variety_padding_5dp"
            android:paddingRight="@dimen/lemon_sub_title_margin_side"
            android:src="@drawable/lemon_delete" />

    </RelativeLayout>

    <View style="@style/lemon_horizen_line" />
    <com.lemon95.lemonvideolib.common.myview.gridview.PullToRefreshListView
        android:id="@+id/lemon_episodes_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lemon_white"
        android:divider="@color/lemon_record_line"
        android:dividerHeight="0.2dp"
        android:paddingLeft="4dp"
        android:paddingRight="2dp"
        android:scrollbars="none"
        ptr:ptrHeaderTextColor="@color/lemon_type_color"
        ptr:ptrMode="pullFromEnd"/>
