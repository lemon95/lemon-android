<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lemon_white"
              android:orientation="vertical">

    <include layout="@layout/lemon_common_top_back"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/lemon_white"
        android:orientation="vertical">

        <View
            style="@style/lemon_line"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lemon_open_imview_my_top2"
            android:background="@color/lemon_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/lemon_zhuce_wi"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/lemon_pay_zhuce_shoujihao"
                android:textColor="@color/lemon_sub_title"
                android:textSize="@dimen/lemon_open_vip_tv_dara"/>

            <EditText
                android:id="@+id/lemon_register_activity_ed_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lemon_white"
                android:gravity="center_vertical"
                android:hint="填写关联的手机号码"
                android:singleLine="true"
                android:textColor="@color/lemon_sub_title"
                android:textSize="@dimen/lemon_open_vip_tv_dara"/>

        </LinearLayout>

        <View
            style="@style/lemon_line"
            android:layout_marginLeft="10dp"
            android:visibility="visible"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lemon_open_imview_my_top2"
            android:background="@color/lemon_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="@dimen/lemon_zhuce_wi"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/lemon_pay_zhuce_shoujihao_yanzheng"
                android:textColor="@color/lemon_sub_title"
                android:textSize="@dimen/lemon_open_vip_tv_dara"/>

            <EditText
                android:id="@+id/lemon_register_activity_ed_verification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/lemon_white"
                android:hint="@string/lemon_pay_zhuce_shoujihao_yanzheng_tianxie"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColor="@color/lemon_sub_title"
                android:textSize="@dimen/lemon_open_vip_tv_dara"/>

            <Button
                android:id="@+id/lemon_register_activity_bt_send_out"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/lemon_bt_bg_zhuce"
                android:text="@string/lemon_pay_zhuce_shoujihao_yanzheng_fasong"
                android:textColor="@color/lemon_dingzhi_bg_color"
                android:textSize="@dimen/lemon_open_vip_tv_dara"/>
        </LinearLayout>

        <View
            style="@style/lemon_line"
            android:layout_marginLeft="10dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lemon_open_imview_my_top2"
            android:background="@color/lemon_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lemon_register_activity_tv_password"
                android:layout_width="@dimen/lemon_zhuce_wi"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/lemon_pay_zhuce_mima"
                android:textColor="@color/lemon_sub_title"
                android:textSize="@dimen/lemon_open_vip_tv_dara"/>

            <EditText
                android:id="@+id/lemon_register_activity_ed_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lemon_white"
                android:hint="@string/lemon_pay_zhuce_mima_tishi"
                android:minLines="1"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/lemon_sub_title"
                android:textSize="@dimen/lemon_open_vip_tv_dara"/>
        </LinearLayout>

        <View
            style="@style/lemon_line"></View>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lemon_register_activity_ll_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/lemon_register_activity_im_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/lemon_xuanzekuang"/>

        <TextView
            android:id="@+id/lemon_register_activity_tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我同意柠檬视频的服务协议"
            android:textColor="#00a0e9"
            android:textSize="14sp"
            />

    </LinearLayout>


    <Button
        android:id="@+id/lemon_register_activity_bt_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/lemon_common_but_bg"
        android:text="@string/lemon_pay_zhuce_zhuce"
        android:textColor="@color/lemon_white"
        android:textSize="@dimen/lemon_private_custom_tv_size"/>
</LinearLayout>