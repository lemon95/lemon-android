<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lemon_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/lemon_dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/lemon_bg_dialog_title"
        android:gravity="center"
        android:padding="10dp"
        android:text="你今天运气爆棚哦"
        android:textColor="@color/lemon_white"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/lemon_dialog_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="这部影片在线影院好像能直接观看呢,先去瞅瞅呗"
        android:textColor="@color/lemon_blacker"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lemon_qusousuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/lemon_bg_qudingzhi"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/lemon_get_qusousuo"
            android:textColor="@color/lemon_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lemon_jixudingzhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/lemon_bf_open_vip"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/lemon_get_jixuqiupian"
            android:textColor="@color/lemon_set_text_color"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
