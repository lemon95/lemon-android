<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lemon_blacker"
    android:orientation="vertical"
    tools:context="com.lemon95.lemonvideolib.special.view.CameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lemon_high">

            <ImageView
                android:id="@+id/lemon_back_ll"
                android:layout_width="@dimen/lemon_not_what_ll_tv_maight"
                android:layout_height="@dimen/lemon_not_what_ll_tv_maight"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/lemon_more_item_top"
                android:src="@drawable/lemon_guanbi" />
        </RelativeLayout>

        <com.lemon95.lemonvideolib.common.myview.progress.MovieRecorderView
            android:id="@+id/lemon_surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/lemon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/lemon_text_bg"
                android:gravity="center_horizontal"
                android:textColor="@color/lemon_red"
                android:textSize="@dimen/lemon_video_recording_textsize" />
        </com.lemon95.lemonvideolib.common.myview.progress.MovieRecorderView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/lemon_camera_start"
                android:layout_width="@dimen/lemon_camera_but_size1"
                android:layout_height="@dimen/lemon_camera_but_size1"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/lemon_camera_but"
                android:text="@string/lemon_camera_but"
                android:textColor="@color/lemon_camera_but"
                android:textSize="@dimen/lemon_camera_but_text_size" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
