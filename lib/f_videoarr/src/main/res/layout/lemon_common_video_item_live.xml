<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/lemon_type_title_left"
    android:paddingRight="@dimen/lemon_type_title_left"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lemon_yiyuan1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lemon_image_height"
            android:background="#EFEFEF">

            <ImageView
                android:id="@+id/lemon_img_bg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/lemon_def_image" />

            <ImageView
                android:id="@+id/lemon_img_jaobiao1"
                android:layout_width="@dimen/lemon_video_jiaobiao"
                android:layout_height="@dimen/lemon_video_jiaobiao"/>

            <LinearLayout
                android:id="@+id/lemon_ll_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/lemon_video_msg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/lemon_banner_focus_buttom">

                <TextView
                    android:id="@+id/lemon_tv_title1"
                    style="@style/lemon_main_video_msg"
                    android:ellipsize="end"
                    android:singleLine="true" />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/lemon_tv_name1"
            style="@style/main_type_text"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lemon_yiyuan2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lemon_image_gap"
        android:layout_marginRight="@dimen/lemon_image_gap"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lemon_image_height"
            android:background="#EFEFEF">

            <ImageView
                android:id="@+id/lemon_img_bg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/lemon_def_image" />

            <ImageView
                android:id="@+id/lemon_img_jaobiao2"
                android:layout_width="@dimen/lemon_video_jiaobiao"
                android:layout_height="@dimen/lemon_video_jiaobiao" />

            <LinearLayout
                android:id="@+id/lemon_ll_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/lemon_video_msg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/lemon_banner_focus_buttom">

                <TextView
                    android:id="@+id/lemon_tv_title2"
                    style="@style/lemon_main_video_msg"
                    android:ellipsize="end"
                    android:singleLine="true"/>

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/lemon_tv_name2"
            style="@style/main_type_text"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lemon_yiyuan3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lemon_image_height"
            android:background="#EFEFEF">

            <ImageView
                android:id="@+id/lemon_img_bg3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/lemon_def_image" />

            <ImageView
                android:id="@+id/lemon_img_jaobiao3"
                android:layout_width="@dimen/lemon_video_jiaobiao"
                android:layout_height="@dimen/lemon_video_jiaobiao" />

            <LinearLayout
                android:id="@+id/lemon_ll_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/lemon_video_msg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/lemon_banner_focus_buttom">

                <TextView
                    android:id="@+id/lemon_tv_title3"
                    style="@style/lemon_main_video_msg"
                    android:ellipsize="end"
                    android:singleLine="true"/>

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/lemon_tv_name3"
            style="@style/main_type_text"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>
