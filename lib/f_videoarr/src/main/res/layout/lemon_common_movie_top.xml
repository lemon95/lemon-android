<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/lemon_ll_menu"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lemon_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lemon_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/lemon_menu_top">


        <com.lynnchurch.horizontalscrollmenu.HorizontalScrollMenu
            android:id="@+id/lemon_hsm_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.lynnchurch.horizontalscrollmenu.HorizontalScrollMenu
            android:id="@+id/lemon_hsm_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/lemon_menu_ll_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.lynnchurch.horizontalscrollmenu.HorizontalScrollMenu
                android:id="@+id/lemon_hsm_container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lemon_menu_ll_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.lynnchurch.horizontalscrollmenu.HorizontalScrollMenu
                android:id="@+id/lemon_hsm_container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/lemon_menu_top"
            android:background="@color/lemon_main_line"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/lemon_more_item_top"
        android:background="@color/lemon_main_line"></View>

</LinearLayout>