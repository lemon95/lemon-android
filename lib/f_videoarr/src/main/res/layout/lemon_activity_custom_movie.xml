<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lemon_bg"
              android:orientation="vertical">

    <include layout="@layout/lemon_common_top_back"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lemon_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                style="@style/lemon_line"
                android:layout_marginTop="@dimen/lemon_search_content_movies_topsize"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/lemon_search_content_movies_ll_height"
                android:background="@color/lemon_white"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lemon_search_content_movies_ll_editText_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/lemon_video_recording_left"
                    android:paddingRight="@dimen/lemon_video_recording_left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/lemon_search_content_movies_name"
                        android:textColor="@color/lemon_record_tv"
                        android:textSize="@dimen/lemon_search_content_movies_textsize"/>

                    <EditText
                        android:id="@+id/lemon_search_content_movies_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lemon_video_recording_left"
                        android:background="@color/lemon_white"
                        android:hint="@string/lemon_search_content_movies_tishiname"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="@dimen/lemon_search_content_movies_textsize"/>
                </LinearLayout>

                <View
                    style="@style/lemon_line"
                    android:layout_marginLeft="@dimen/lemon_video_recording_left"
                    ></View>

                <EditText
                    android:id="@+id/lemon_search_content_movies_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lemon_search_content_movies_ll_ed_contont_height"
                    android:background="@color/lemon_white"
                    android:gravity="top"
                    android:hint="@string/lemon_search_content_movies_find"
                    android:maxLength="200"
                    android:padding="@dimen/lemon_video_recording_left"
                    android:textColor="#000000"
                    android:textSize="@dimen/lemon_menu_size"/>

            </LinearLayout>


            <View
                style="@style/lemon_line"
                android:layout_marginBottom="18dp"
                ></View>

            <Button
                android:id="@+id/lemon_search_content_movies_tv_determine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lemon_skin_bug_height"
                android:layout_margin="@dimen/lemon_video_recording_left"
                android:background="@drawable/lemon_common_but_bg"
                android:gravity="center"
                android:text="@string/lemon_search_content_movies_determine"
                android:textColor="@color/lemon_white"
                android:textSize="@dimen/lemon_skin_text_size"/>

            <TextView
                android:id="@+id/lemon_search_content_movies_tv_jilu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/lemon_video_recording_left"
                android:layout_marginRight="@dimen/lemon_video_recording_left"
                android:layout_marginTop="@dimen/lemon_video_recording_left"
                android:text="@string/lemon_search_content_movies_prompt3"
                android:textColor="@color/lemon_top_bg"
                android:textSize="@dimen/lemon_search_content_movies_tishi_textsize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lemon_video_recording_left"
                android:layout_marginRight="@dimen/lemon_video_recording_left"
                android:layout_marginTop="@dimen/lemon_video_recording_left"
                android:text="@string/lemon_search_content_movies_prompt"
                android:textSize="@dimen/lemon_search_content_movies_tishi_textsize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lemon_video_recording_left"
                android:layout_marginRight="@dimen/lemon_video_recording_left"
                android:layout_marginTop="@dimen/lemon_vipactivity_top_3"
                android:lineSpacingExtra="@dimen/lemon_vipactivity_top_3"
                android:text="@string/lemon_search_content_movies_prompt1"
                android:textSize="@dimen/lemon_search_content_movies_tishi_textsize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lemon_video_recording_left"
                android:layout_marginRight="@dimen/lemon_video_recording_left"
                android:layout_marginTop="@dimen/lemon_vipactivity_top_3"
                android:lineSpacingExtra="@dimen/lemon_vipactivity_top_3"
                android:text="@string/lemon_search_content_movies_prompt2"
                android:textSize="@dimen/lemon_search_content_movies_tishi_textsize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lemon_video_recording_left"
                android:layout_marginRight="@dimen/lemon_video_recording_left"
                android:layout_marginTop="@dimen/lemon_vipactivity_top_3"
                android:lineSpacingExtra="@dimen/lemon_vipactivity_top_3"
                android:text="@string/lemon_search_content_movies_prompt7"
                android:textSize="@dimen/lemon_search_content_movies_tishi_textsize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lemon_video_recording_left"
                android:layout_marginRight="@dimen/lemon_video_recording_left"
                android:layout_marginTop="@dimen/lemon_vipactivity_top_3"
                android:lineSpacingExtra="@dimen/lemon_vipactivity_top_3"
                android:text="@string/lemon_search_content_movies_prompt4"
                android:textSize="@dimen/lemon_search_content_movies_tishi_textsize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lemon_video_recording_left"
                android:layout_marginRight="@dimen/lemon_video_recording_left"
                android:layout_marginTop="@dimen/lemon_vipactivity_top_3"
                android:lineSpacingExtra="@dimen/lemon_vipactivity_top_3"
                android:text="@string/lemon_search_content_movies_prompt5"
                android:textSize="@dimen/lemon_search_content_movies_tishi_textsize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lemon_video_recording_left"
                android:layout_marginRight="@dimen/lemon_video_recording_left"
                android:layout_marginTop="@dimen/lemon_vipactivity_top_3"
                android:lineSpacingExtra="@dimen/lemon_vipactivity_top_3"
                android:text="@string/lemon_search_content_movies_prompt6"
                android:textSize="@dimen/lemon_search_content_movies_tishi_textsize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lemon_pay_logo_size"
                android:layout_marginLeft="@dimen/lemon_video_recording_left"
                android:layout_marginRight="@dimen/lemon_video_recording_left"
                android:layout_marginTop="@dimen/lemon_vipactivity_top_3"
                android:lineSpacingExtra="@dimen/lemon_vipactivity_top_3"
                android:text="@string/lemon_search_content_movies_prompt8"
                android:textSize="@dimen/lemon_search_content_movies_tishi_textsize"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>