<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/lemon_watch_record_ll_hi"
              android:background="@color/lemon_white"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/lemon_private_custom_wi"
        android:layout_height="@dimen/lemon_watch_record_ll_hi"
        android:layout_weight="8"
        android:background="@color/lemon_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lemon_item_ll_watch_Record_iv_Icon"
            android:layout_width="@dimen/lemon_watch_record_hi"
            android:layout_height="@dimen/lemon_watch_record_wi"
            android:layout_marginLeft="@dimen/lemon_item_watch_record_iv_mleft"
            android:layout_marginRight="@dimen/lemon_item_watch_record_iv_mleft"
            android:src="@drawable/lemon_video_defr"/>

        <LinearLayout
            android:id="@+id/lemon_item_ll_watvh_Record_ll_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lemon_open_imview_dara_hi"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/lemon_item_ll_watch_Record_ll_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/lemon_record_tv"
                android:textSize="@dimen/lemon_search_content_movies_textsize"/>

            <TextView
                android:id="@+id/lemon_item_ll_watch_Record_ll_collection_data"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/lemon_viewing_time"
                android:gravity="center_vertical"
                android:drawablePadding="3dp"
                android:textColor="@color/lemon_camera_progress_textcolor"
                android:textSize="@dimen/lemon_item_watch_record_ll_tv_size"/>
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/lemon_item_ll_watch_Record_iv_xuanze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/lemon_private_custom_dianji_left"
        android:layout_marginRight="@dimen/lemon_item_watch_record_ll_tv_marginRight"
        android:button="@drawable/lemon_checkbox_selector"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        />

</LinearLayout>