<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="80dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/sdk_sdk_media_controller_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/venvy_sdk_media_controller_backward_bg" />

    <TextView
        android:id="@+id/sdk_sdk_media_controller_plan_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdk_sdk_media_controller_plan"
        android:layout_centerHorizontal="true"
        android:textColor="@color/venvy_video_buffer_text_color" />
</RelativeLayout>
